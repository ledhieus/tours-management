extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 

    .tour-detail 
        .container.my-3 
            .row 
                .col-6 
                    .inner-images 
                        .inner-image 
                            img()
                        .inner-image 
                            img()
                        .inner-image 
                            img()
                        

                .col-6 
                    .inner-title Tour Hạ Long 
                    .inner-barcode 
                        <i class="fa-solid fa-barcode"></i> Mã tour 
                    .inner-time-start 
                        <i class="fa-regular fa-calendar-days"></i> Lịch khởi hành 
                    .inner-stock
                        <i class="fa-solid fa-person-walking-luggage"></i> Còn lại: 
                    .inner-price-special 400.000đ
                    .inner-price 500.000đ
                    .inner-percent Giảm tới 20%

                    form(
                        form-add-to-cart 
                        tour-id = `:tourId`
                    )
                        input(
                            class="form-control mb-2"
                            type="number"
                            name="quantity"
                            value="1"
                            min="1"
                            max="10"
                        )
                        button(
                            type= "submit"
                            class="btn btn-success btn-block"
                        ) Thêm vào giỏ hàng 

            .row 
                .col-12 
                    .inner-infomation 
                        .inner-label Thông tin tour 
                        .inner-text 
                            | Nội dung thông tin tour 
                .col-12 
                    .inner-infomation 
                        .inner-label Lịch trình tour 
                        .inner-text 
                            | Nội dung Lịch trình tour        
